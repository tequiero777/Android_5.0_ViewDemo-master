<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context="xr.hellochartsdemo.ui.activity.chart.PreviewLineChartActivity">

    <lecho.lib.hellocharts.view.LineChartView
        android:id="@+id/lcv_pre_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="6dp"
        android:background="#918f8f" />

    <lecho.lib.hellocharts.view.PreviewLineChartView
        android:id="@+id/plcv_pre_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:transitionName="pre_line"
        android:layout_weight="1" />

</LinearLayout>
